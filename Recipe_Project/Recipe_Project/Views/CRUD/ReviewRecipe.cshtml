@model Recipe
<!-- Using BasicLayout file for Header -->
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="panel panel-success">
                    <div class="panel-heading text-center"><h4>Recipe Feedback</h4></div>
                    <div class="panel-body">
                        <form class="p-a-1" asp-action="Index" method="post">
                            <div asp-validation-summary="All"></div>
                            <div class="form-group">
                                <label asp-for="RecipeName">Recipe Name:</label>
                                <label asp-for="RecipeName">@Model.RecipeName</label>
                            </div>

                            <div class="form-group">
                                <label asp-for="Review">Feedback/Review:</label>
                                <textarea class="form-control" asp-for="Review"></textarea>
                            </div>
                            <div class="text-center">
                                <button class="btn btn-primary" type="submit">Submit Review</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>